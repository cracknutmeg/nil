<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="@dimen/detail_view_image_size"
                android:layout_height="@dimen/detail_view_image_size"
                android:id="@+id/iViewRetailerLogo" android:background="@drawable/retailer_allpoint"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:layout_marginRight="10dp"
                android:scaleType="centerInside"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp" android:layout_marginRight="20dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvResultsTitle" android:textSize="@dimen/fontsize_results_name"
                    android:textColor="@color/black" android:layout_marginBottom="2dp"
                    android:textIsSelectable="false"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvResultsAddress" android:textColor="@color/lightGray"
                    android:layout_marginBottom="4dp"
                    android:textSize="@dimen/fontsize_results_address"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                  android:layout_height="@dimen/results_element_divider_height"
                  android:background="@color/lightGray" android:id="@+id/linearLayout"/>
</LinearLayout>