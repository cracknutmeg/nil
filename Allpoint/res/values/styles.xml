<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="appTheme" parent="android:Theme.DeviceDefault">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textAppearanceButton">@style/textAppearanceButton</item>
    </style>

    <style name="textAppearanceButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/registration_frame_shape</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>
    <style name="edit_text_registration_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:background">#ededed</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="edit_text_registration_style_tablet">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:background">#ededed</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
        <item name="android:inputType">textCapWords</item>
    </style>
    <style name="button_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_curve_shape</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>


    </style>
    
    <style name="button_style_SignUp">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_curve_signup_shape</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="style_lay_txt_linkuser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="bottom_btn_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#0a8530</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="top_bar_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="top_bar_rel_lay_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_panel_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/gradient_panel</item>

    </style>

    <style name="top_bar_btn_cancel_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@drawable/text_button_background</item>
        <item name="android:text">@string/cancel_button</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
    </style>

    <style name="top_bar_btn_login_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@drawable/text_button_background</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
    </style>
</resources>