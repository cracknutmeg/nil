<?xml version="1.0" encoding="utf-8"?>

<!-- suppress AndroidLintOverdraw, AndroidLintOverdraw, AndroidLintOverdraw -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="false"
              android:layout_alignParentRight="false"
              android:layout_centerInParent="true"
              android:background="@color/white"
              android:clickable="false"
              android:focusable="false"
              android:focusableInTouchMode="false"
              android:minWidth="238dp"
              android:orientation="vertical">

    <TextView
            android:id="@+id/tvShareVia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:text="@string/en_shareTitle"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greenLine"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/shareEmailImageButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="9"
                    android:background="@null"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/share_gmail"/>

            <TextView
                    android:id="@+id/tvShareEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="@string/en_shareEmail"
                    android:textColor="@color/shareGRAY"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/sharebySmsImageButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="9"
                    android:background="@null"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/share_messages"/>

            <TextView
                    android:id="@+id/tvShareSms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="@string/en_shareMessaging"
                    android:textColor="@color/shareGRAY"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>